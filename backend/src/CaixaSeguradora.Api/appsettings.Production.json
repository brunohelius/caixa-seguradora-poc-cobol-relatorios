{
  "ConnectionStrings": {
    "DefaultConnection": "${DB_CONNECTION_STRING}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://app.caixaseguradora.com.br",
      "https://www.caixaseguradora.com.br"
    ]
  },
  "Jwt": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "CaixaSeguradora",
    "Audience": "CaixaSeguradora.API",
    "ExpirationMinutes": 60
  },
  "Certificate": {
    "Path": "${CERTIFICATE_PATH}",
    "Password": "${CERTIFICATE_PASSWORD}",
    "Type": "PFX"
  },
  "Kestrel": {
    "Limits": {
      "MaxConcurrentConnections": 200,
      "MaxConcurrentUpgradedConnections": 100,
      "MaxRequestBodySize": 10485760,
      "KeepAliveTimeout": "00:02:00",
      "RequestHeadersTimeout": "00:00:30"
    }
  },
  "Hsts": {
    "MaxAge": 31536000,
    "IncludeSubDomains": true,
    "Preload": true
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "QuotaExceededResponse": {
      "Content": "{\"statusCode\": 429, \"message\": \"Limite de requisições excedido. Tente novamente em {0} segundos.\", \"timestamp\": \"{1}\"}",
      "ContentType": "application/json"
    },
    "IpWhitelist": [],
    "EndpointWhitelist": [
      "get:/api/v1/health",
      "get:/api/v1/health/ready"
    ],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 300
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ],
    "EndpointRules": [
      {
        "Endpoint": "*:/api/v1/auth/*",
        "Period": "5m",
        "Limit": 5
      },
      {
        "Endpoint": "post:/api/v1/auth/login",
        "Period": "5m",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/v1/reports/generate",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "post:/api/v1/reports/generate/premit",
        "Period": "1m",
        "Limit": 2
      },
      {
        "Endpoint": "post:/api/v1/reports/generate/premced",
        "Period": "1m",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/v1/mock-data/*",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "post:/api/v1/mock-data/load",
        "Period": "5m",
        "Limit": 3
      },
      {
        "Endpoint": "post:/api/v1/mock-data/reset",
        "Period": "5m",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/v1/premiums/*",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "*:/api/v1/policies/*",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "*:/api/v1/products/*",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "*:/api/v1/clients/*",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "*:/api/v1/batch-jobs/*",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "post:/api/v1/batch-jobs",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/v1/dashboard/*",
        "Period": "1m",
        "Limit": 15
      },
      {
        "Endpoint": "*:/api/v1/export/*",
        "Period": "1m",
        "Limit": 5
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  },
  "Hangfire": {
    "ConnectionString": "${HANGFIRE_CONNECTION_STRING}",
    "WorkerCount": 5,
    "Queues": ["default", "reports", "notifications"],
    "DashboardPath": "/hangfire"
  },
  "Email": {
    "SmtpServer": "${SMTP_SERVER}",
    "SmtpPort": 587,
    "UseSsl": true,
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "FromAddress": "noreply@caixaseguradora.com.br",
    "FromName": "Caixa Seguradora - Sistema de Relatórios"
  },
  "Database": {
    "EnforceReadOnly": true,
    "CommandTimeout": 30,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:30"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/caixa-seguradora-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
